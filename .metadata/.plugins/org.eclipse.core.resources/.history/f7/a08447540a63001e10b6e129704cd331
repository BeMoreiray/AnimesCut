package com.projects.animescut.services;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.projects.animescut.repositories.GenericRepository;

@Service
public abstract class GenericService<T, ID> {
	
	@Autowired
	private GenericRepository<T, ID> repository;
	
	protected boolean hasDuplication(T entity) {
		Optional<T> existingEntity = repository.findByDuplicateFild(getDupiclateFildValue(entity));
		return existingEntity.isPresent();
		
		
	}
	protected abstract String getDupiclateFildValue(T entity);
}
