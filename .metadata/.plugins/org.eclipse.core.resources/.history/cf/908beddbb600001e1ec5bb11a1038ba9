#define o perfil ativo da aplicação
spring.profiles.active=${APP_PROFILE:animesCut} 

#desativa a funcionalidade do JPA, evita que as sessões do BD 
#fiquem abertas durante toda a duração de uma requisição
spring.jpa.open-in-view=false

#permite que as origens acessem os recursos da API por meio de requisições AJAX
cors.origins=${CORS_ORIGINS:http://localhost:5173,http://localhost:3000}
