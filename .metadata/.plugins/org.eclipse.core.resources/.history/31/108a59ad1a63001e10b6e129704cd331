package com.projects.animescut.services;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.projects.animescut.entities.FavoritesController;
import com.projects.animescut.exceptions.ResourceNotFoundException;
import com.projects.animescut.repositories.FavoritesRepository;

import jakarta.transaction.Transactional;

@Service
public class FavoritesService {
	@Autowired
	FavoritesRepository repository;
	
	public List<FavoritesController> findAllFavorites(){
		List<FavoritesController> result = repository.findAll();
		return result;
	};
	
	public FavoritesController findById(Long id) {
		Optional<FavoritesController> optional =  repository.findById(id);
		if(optional.isPresent()) {
			return optional.get();
		}else {
			throw new ResourceNotFoundException("Objeto n√£o encontrado com o ID informado! Tente novamente");
		}
	}
	
	public FavoritesController insertNewObject(FavoritesController favorites) {
		FavoritesController result = repository.save(favorites);
		return result;
	}
	
	@Transactional
	public FavoritesController updateFavorites(Long id, FavoritesController favorites) {
		FavoritesController result = repository.findById(id).orElse(null);
		if(result != null) {
			result.setUser(favorites.getUser());
			result.setAnimes(favorites.getAnimes());
			
			return repository.save(result);
			
		}
		return null;
	}
	
	@Transactional
	public boolean deleteFavoritesById(Long id) {
		FavoritesController result = this.findById(id);
		
		if(result != null) {
			repository.delete(result);
			return true;
		}
		return false;
		
	}
	
	
}
